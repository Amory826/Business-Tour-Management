<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dm4dp">

        <Button
            android:id="@+id/delete_view"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_business_tour_management"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@color/black"
            android:padding="16dp"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="@color/delete"
            app:backgroundTint="@null" />
    </LinearLayout>


    <!-- This layout holds the main content to be swiped -->
    <LinearLayout
        android:id="@+id/layoutForeground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_business_tour_management"
        android:layout_margin="@dimen/dm4dp">

        <TextView
            android:id="@+id/txtNameTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BusinessTourManagement"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:padding="@dimen/padding12dp" />

        <TextView
            android:id="@+id/txtNameCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dm8dp"
            android:text="Công ty: ............"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dm4dp" />

        <TextView
            android:id="@+id/txtNameTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dm8dp"
            android:text="Giáo viên: ..........."
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dm4dp" />

        <TextView
            android:id="@+id/txtAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dm8dp"
            android:text="Số lượng: ..........."
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dm4dp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dm8dp"
            android:text="Thời gian bắt đầu: 19-09-2024"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dm4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_add"
                app:backgroundTint="@null"
                android:layout_weight="1"
                android:text="Sửa"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_margin="@dimen/dm8dp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_add"
                app:backgroundTint="@null"
                android:layout_weight="1"
                android:text="Xóa"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_margin="@dimen/dm8dp" />

            <Button
                android:id="@+id/btnDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_add"
                app:backgroundTint="@null"
                android:layout_weight="1"
                android:text="Chi tiết"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_margin="@dimen/dm8dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
