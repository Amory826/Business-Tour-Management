<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding20dp"
    tools:context=".View.MenuAdminActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/backgroundAdmin"
    >

    <DatePicker
        android:id="@+id/datePicker"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="@dimen/dm120dp"
            android:layout_height="wrap_content"
            android:text="@string/Confirm"
            android:layout_margin="@dimen/padding12dp"
            android:background="@drawable/custom_business_tour_management"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/dm120dp"
            android:layout_height="wrap_content"
            android:text="@string/Cancel"
            android:layout_margin="@dimen/padding12dp"
            android:background="@drawable/custom_business_tour_management"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            tools:ignore="ButtonStyle" />

    </LinearLayout>



</LinearLayout>